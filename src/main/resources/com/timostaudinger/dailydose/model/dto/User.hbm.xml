<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="com.timostaudinger.dailydose.model.dto.User" table="user">
        <id name="id">
            <generator class="native"/>
        </id>
        <property name="email"/>
        <property name="name"/>
        <property name="frequency">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">com.timostaudinger.dailydose.util.Frequency</param>
            </type>
        </property>
        <property name="active" type="boolean"/>
        <property name="changedOn" type="timestamp" column="changed_on" generated="always"/>
        <property name="createdOn" type="timestamp" column="created_on" generated="insert"/>
        <set name="tokens" table="token">
            <key column="user_id"/>
            <one-to-many class="com.timostaudinger.dailydose.model.dto.Token"/>
        </set>
    </class>

</hibernate-mapping>