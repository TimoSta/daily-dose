<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="com.timostaudinger.dailydose.model.User" table="user">
        <id name="id">
            <generator class="native"/>
        </id>
        <property name="email"/>
        <property name="name"/>
        <property name="frequency" type="short"/>
        <property name="active" type="boolean"/>
        <property name="changedOn" type="timestamp" column="changed_on"/>
        <property name="createdOn" type="timestamp" column="created_on"/>
    </class>
</hibernate-mapping>